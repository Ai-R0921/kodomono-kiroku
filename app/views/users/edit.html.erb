<div class="container">
  <div class="row">
    <div class="col text-center">
      <h1>user edit</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-4 mx-auto">
      <%= form_with model: @user do |f| %>
        <%= f.label :user_name %>
        <%= f.text_field :user_name, sutofocus: true, autocomplete: "user_name" %>

        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        <%= f.submit "save" %>
      <% end %>
    </div>
  </div>
</div>
