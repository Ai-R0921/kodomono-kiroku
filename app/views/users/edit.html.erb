<div class="container">
  <div class="row mt-5">
    <div class="col text-center">
      <h1>user edit</h1>
    </div>
  </div>
  <div class="row mt-5">
    <div class="col text-center">
      <%= form_with model: @user do |f| %>
      <div class="field">
        <%= f.label :user_name %><br>
        <%= f.text_field :user_name, autofocus: true, autocomplete: "user_name" %><br>
      </div>
      <div class="field">
        <%= f.label :email %><br>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %><br>
      </div>
      <div class="field">
        <%= f.submit "save" %>
      </div>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col text-center">
      <%= link_to "back", :back %>
    </div>
  </div>
</div>
