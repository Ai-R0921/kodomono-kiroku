<div class="container">
  <div class="row">
    <div class="col text-center">
      <h1>my page</h1>
    </div>
  </div>
  <div class="row mt-5">
    <% @posts.each do |post| %>
      <%= post.title %>
      <%= post.body %>
      <%= link_to post_path(current_user) do %>
        <% if post.image.attached? %>
          <%= image_tag post.image, size: "200x200" %>
        <% else %>
          <%= image_tag "noimage", size: "200x200" %>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>
<%= link_to "edit", edit_user_path(current_user) %>
<%= link_to "new post", new_post_path %>
<%= link_to "blogs", posts_path %>
